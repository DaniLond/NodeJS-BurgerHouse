		{
			"listen": "test",
			"script": {
				"type": "text/javascript",
				"packages": {},
				"exec": [
					"var token = pm.globals.get(\"jwt\"); \r",
					"\r",
					"if (!token) {\r",
					"    console.log(\"No token found. Logging in...\");\r",
					"\r",
					"    pm.sendRequest({\r",
					"        url: 'http://localhost:3200/users/login',\r",
					"        method: 'POST',\r",
					"        header: { 'Content-Type': 'application/json' },\r",
					"        body: {\r",
					"            mode: 'raw',\r",
					"            raw: JSON.stringify({ email: \"leidy@gmail.com\", password: \"Daniela123\" })\r",
					"        }\r",
					"    }, function (err, res) {\r",
					"        if (err) {\r",
					"            console.error(\"Error en la petición:\", err);\r",
					"        } else {\r",
					"            var jsonData = res.json();\r",
					"\r",
					"            if (jsonData.token) {\r",
					"                pm.globals.set(\"jwt\", jsonData.token);\r",
					"                console.log(\"Nuevo token guardado:\", jsonData.token);\r",
					"            } else {\r",
					"                console.error(\"No se encontró el token en la respuesta.\");\r",
					"            }\r",
					"        }\r",
					"    });\r",
					"} else {\r",
					"    console.log(\"Token ya existe:\", token);\r",
					"}"
				]
			}
		}
